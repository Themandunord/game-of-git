{
    "name": "nest-app",
    "version": "0.0.1",
    "description": "Gamification of GitHub Dev Flows",
    "author": "MikingTheViking",
    "license": "MIT",
    "keywords": [
        "NestJS",
        "Prisma",
        "Typescript"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/miking-the-viking/game-of-git.git"
    },
    "bugs": {
        "url": "https://github.com/miking-the-viking/game-of-git/issues"
    },
    "scripts": {
        "build": "rimraf dist && tsc -p tsconfig.build.json",
        "format": "prettier --write \"nest-app/src/**/*.ts\"",
        "start": "ts-node -r tsconfig-paths/register nest-app/src/main.ts",
        "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
        "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
        "start:prod": "node dist/main.js",
        "lint": "tslint -p tsconfig.json -c tslint.json",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@nestjs/common": "6.6.7",
        "@nestjs/core": "6.6.7",
        "@nestjs/cqrs": "^6.0.1",
        "@nestjs/graphql": "6.5.1",
        "@nestjs/jwt": "6.1.1",
        "@nestjs/mongoose": "^6.1.2",
        "@nestjs/passport": "6.1.0",
        "@nestjs/platform-express": "6.6.7",
        "@nestjs/platform-socket.io": "^6.10.7",
        "@nestjs/swagger": "3.1.0",
        "@nestjs/websockets": "^6.10.7",
        "apollo-server-express": "2.9.3",
        "bcrypt": "3.0.6",
        "class-transformer": "0.2.3",
        "class-validator": "0.10.0",
        "graphql": "14.5.4",
        "graphql-tools": "4.0.5",
        "mongoose": "^5.7.5",
        "passport": "0.4.0",
        "passport-jwt": "4.0.0",
        "prisma-client-lib": "1.34.8",
        "reflect-metadata": "0.1.13",
        "rxjs": "6.5.3",
        "subscriptions-transport-ws": "^0.9.16",
        "swagger-ui-express": "4.0.7",
        "type-graphql": "0.17.5",
        "typeorm": "^0.2.20",
        "typescript": "^3.7.4",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@nestjs/testing": "6.6.7",
        "@types/bcrypt": "3.0.0",
        "@types/chance": "1.0.6",
        "@types/express": "4.17.0",
        "@types/node": "^12.13.1",
        "@types/supertest": "2.0.8",
        "chance": "1.0.18",
        "husky": "^3.0.9",
        "lint-staged": "^9.4.2",
        "prettier": "1.18.2",
        "rimraf": "3.0.0",
        "supertest": "4.0.2",
        "ts-jest": "^24.2.0",
        "ts-node": "^8.5.4",
        "tsc-watch": "2.4.0",
        "tsconfig-paths": "3.8.0",
        "tslint": "5.19.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
