enum Role {
  USER
  ADMIN
}

type User {
  id: ID! @id
  email: String! @unique @index
  hash: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  name: String
  role: Role @default(value: USER)
  keys: [AppKey!]!
  repositories: [Repository!]!
  gitLogin: String!
}

type AppKey {
    id: ID! @id
    user: User!
    key: String! @unique
    name: String
}

type Repository {
  id: ID! @id
  idExternal: String! @unique
  createdAtExternal: DateTime!
  updatedAtExternal: DateTime!
  name: String! @unique
  owner: String!
  user: User!
  isTracked: Boolean!
  appKey: AppKey!
}
